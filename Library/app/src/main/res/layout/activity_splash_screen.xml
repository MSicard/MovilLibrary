<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:layout_width="@dimen/activity_splash_screen_logo_size_width"
        android:layout_height="@dimen/activity_splash_screen_logo_size_height"
        android:scaleType="centerInside"
        android:src="@drawable/logo"
        android:layout_marginBottom="@dimen/activity_splash_screen_logo_margin_bottom"/>

    <ProgressBar
        android:layout_width="@dimen/activity_splash_screen_progressbar_size_width"
        android:layout_height="@dimen/activity_splash_screen_progressbar_size_height"/>
</LinearLayout>
