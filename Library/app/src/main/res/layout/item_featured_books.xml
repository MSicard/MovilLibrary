<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/activity_home_featured_book_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/activity_home_featured_book_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/yorobot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/activity_home_featured_book_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_home_featured_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_home_featured_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Autor"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/activity_home_featured_book_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/activity_home_featured_book_synapsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Esta es la sinapsis del libro, Esta es la sinapsis del libro, Esta es la sinapsis del libro, Esta es la sinapsis del libro, Esta es la sinapsis del libro, Esta es la sinapsis del libro, Esta es la sinapsis del libro,"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>