<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <ImageView
            android:id="@+id/activity_login_logo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo"
            android:scaleType="centerInside"
            android:layout_marginBottom="50dp"/>
        <EditText
            android:id="@+id/activity_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail o teléfono"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/activity_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:gravity="center"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/activity_login_sign_in"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:drawableStart="@drawable/facebook_logo"
            android:layout_gravity="center"
            android:text="Inciar sesión con Facebook"/>
    </LinearLayout>


</ScrollView>
