<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_featured_books_cardview_height"
    android:layout_margin="@dimen/item_featured_books_cardview_margin"
    card_view:cardCornerRadius="@dimen/item_featured_books_cardview_corner_radius">

    <RelativeLayout
        android:id="@+id/activity_home_featured_book_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_featured_books_relative_layout_margin">

        <ImageView
            android:id="@+id/activity_home_featured_book_image"
            android:layout_width="@dimen/item_featured_books_image_view_width"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_featured_books_information_margin_start"
            android:layout_toEndOf="@id/activity_home_featured_book_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_home_featured_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_featured_books_title_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_home_featured_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_featured_books_author_size" />

            <RatingBar
                android:id="@+id/activity_home_featured_book_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/activity_home_featured_book_synapsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_featured_books_texview_synapsis_margin_top"
                android:textSize="@dimen/item_featured_books_sinapsys_size" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>