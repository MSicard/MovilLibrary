<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="3dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/item_card_statistics_book_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_featured_books_relative_layout_margin">

        <ImageView
            android:id="@+id/item_card_statistics_book_image"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/yorobot" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/item_card_statistics_book_image">

            <TextView
                android:id="@+id/item_card_statistics_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_card_statistics_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/item_card_statistics_book_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/item_card_statistics_book_synapsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>