<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_card_statistics_book_height"
    android:layout_margin="@dimen/item_card_statistics_book_margin"
    card_view:cardCornerRadius="@dimen/item_card_statistics_book_corner_radius">

    <RelativeLayout
        android:id="@+id/item_card_statistics_book_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_card_statistics_book_content_margin">

        <ImageView
            android:id="@+id/item_card_statistics_book_image"
            android:layout_width="@dimen/item_card_statistics_book_image_size_width"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/no_image" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/item_card_statistics_book_info_marginStart"
            android:layout_toEndOf="@id/item_card_statistics_book_image">

            <TextView
                android:id="@+id/item_card_statistics_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_card_statistics_book_info_title_textsize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_card_statistics_book_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_card_statistics_book_info_author_textsize" />

            <RatingBar
                android:id="@+id/item_card_statistics_book_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/item_card_statistics_book_synapsis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_card_statistics_book_info_synapsis_marginTop"
                android:textSize="@dimen/item_card_statistics_book_info_synapsis_textsize" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>