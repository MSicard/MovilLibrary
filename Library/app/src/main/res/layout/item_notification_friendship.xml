<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="@dimen/item_notification_4dp"
    card_view:cardElevation="@dimen/item_notification_4dp"
    android:layout_margin="@dimen/item_notification_4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/fragment_my_books_notification_image"
            android:src="@drawable/no_image"
            android:layout_width="@dimen/item_notification_photo_width"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/fragment_my_books_notification_message"
            android:layout_margin="@dimen/item_notification_notification_text_margin"
            android:text="Esta es un notificación. Alguien comentó un texto."
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/fragment_my_books_notification_rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="10dp"
                android:id="@+id/fragment_my_books_notification_date"
                android:layout_marginTop="@dimen/item_notification_time_text_margin"
                android:layout_marginRight="@dimen/item_notification_time_text_margin"
                android:layout_marginBottom="@dimen/item_notification_friendship_time_marginBottom"
                android:text="tiempo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_check_black_24dp"
                    android:id="@+id/fragment_my_books_notification_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <ImageView
                    android:src="@drawable/ic_close_black_24dp"
                    android:id="@+id/fragment_my_books_notification_decline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>