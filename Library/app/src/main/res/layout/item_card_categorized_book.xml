<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_categorized_books_cardview_width"
    android:layout_height="@dimen/item_categorized_books_cardview_height"
    android:layout_margin="@dimen/item_categorized_books_cardview_margin"
    card_view:cardCornerRadius="@dimen/item_categorized_books_cardview_corner_radius">
    <RelativeLayout
        android:id="@+id/activity_home_categorized_book_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/activity_home_categorized_book_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_categorized_books_image_view_height"
            android:layout_margin="@dimen/item_categorized_books_image_view_margin"
            android:src="@drawable/nombre_del_viento"
            android:scaleType="centerInside"/>
        <TextView
            android:id="@+id/activity_home_categorized_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_categorized_books_title_margin"
            android:layout_below="@id/activity_home_categorized_book_image"
            android:singleLine="false"
            android:maxLines="2"/>
    </RelativeLayout>


</android.support.v7.widget.CardView>