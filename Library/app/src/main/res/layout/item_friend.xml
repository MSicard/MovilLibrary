<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_margin="10dp"
    android:gravity="center"
    android:id="@+id/contact_list_card"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/item_card_publication_corner_radius"
    card_view:cardElevation="@dimen/item_card_publication_card_elevation"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/contact_list_position"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.login.widget.ProfilePictureView
                    android:id="@+id/contact_list_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/subtractedcircle_white"
                    android:contentDescription="@null" />
            </FrameLayout>
                <TextView
                    android:textColor="@color/colorBlue"
                    android:id="@+id/contact_list_item_1"
                    android:textSize="20sp"
                    android:clickable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre d emi amigo"/>
        </LinearLayout>
</android.support.v7.widget.CardView>
