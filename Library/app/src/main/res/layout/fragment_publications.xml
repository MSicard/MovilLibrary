<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="@dimen/fragment_publications_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView
        android:layout_margin="@dimen/fragment_publications_margin"
        android:id="@+id/fragment_publications_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v7.widget.RecyclerView>
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/fragment_publications_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="@dimen/fragment_publications_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.facebook.login.widget.ProfilePictureView
                    android:id="@+id/fragment_publication_photo"
                    android:layout_margin="@dimen/fragment_publications_margin"
                    android:layout_width="@dimen/fragment_publications_image_width"
                    android:layout_height="@dimen/fragment_publications_image_height" />

                <EditText
                    android:id="@+id/fragment_publication_comment"
                    android:layout_width="262dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="@string/fragment_publications_hint"
                    android:inputType="textImeMultiLine" />
            </LinearLayout>
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/fragment_publication_publish"
                android:layout_margin="@dimen/fragment_publications_publish_margin"
                android:text="@string/fragment_publications_publish"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>