<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/cardview_dark_background"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/fragment_profile_image_profile"/>
            <TextView
                android:textSize="28sp"
                android:layout_marginBottom="10dp"
                android:text="name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="23sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/fragment_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"/>
            </LinearLayout>
            <ImageButton
                android:onClick="onClick"
                android:id="@+id/fragment_profile_change_name"
                android:src="@drawable/ic_create_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="23sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/fragment_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"/>
            </LinearLayout>
            <ImageButton
                android:onClick="onClick"
                android:id="@+id/fragment_profile_change_email"
                android:src="@drawable/ic_create_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="23sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Favorite Books!"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/fragment_profile_favorite_books"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"/>
            </LinearLayout>
            <ImageButton
                android:onClick="onClick"
                android:id="@+id/fragment_profile_change_favorite_books"
                android:src="@drawable/ic_create_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="23sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About You"/>
                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/fragment_profile_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"/>
            </LinearLayout>
            <ImageButton
                android:onClick="onClick"
                android:id="@+id/fragment_profile_change_about"
                android:src="@drawable/ic_create_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
