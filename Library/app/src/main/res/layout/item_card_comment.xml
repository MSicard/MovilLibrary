<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_card_comment_margin"
    card_view:cardCornerRadius="@dimen/item_card_comment_corner_radius">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_card_comment_info_margin">

            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/item_card_comment_photo"
                android:layout_width="@dimen/item_card_comment_info_image_size_width"
                android:layout_height="@dimen/item_card_comment_info_image_size_height"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/item_card_comment_photo"
                android:layout_margin="@dimen/item_card_comment_info_user_date_margin">

                <TextView
                    android:id="@+id/item_card_comment_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/item_card_comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/item_card_comment_info_date_textsize"/>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/item_card_comment_user_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/item_card_comment_user_comment_margin" />
    </LinearLayout>
</android.support.v7.widget.CardView>